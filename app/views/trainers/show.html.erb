<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<% if @trainer.id==current_trainer.id %>
	<td><%= button_to "New Pokemon!",new_path(), :class => "button medium", :method => :get %></td>
<% end%>

<p>Trainer's Pokemon:</p>
<table>                         
  <tr>                          
    <th>Name</th><th>Level</th><th>Health</th>
  </tr>
<% @trainer.pokemon.each do |data| %>       
  <tr>
    <td><%= data.name %> </td>  <td><%= data.level %> </td>  <td><%= data.health %> </td>  
    <td><%= button_to "Damage!", damage_path(id: data), :class => "button medium", :method => :patch %></td>
  </tr>
<% end %>                        
</table> 

